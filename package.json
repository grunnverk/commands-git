{
  "name": "@grunnverk/commands-git",
  "version": "1.5.0",
  "description": "Git workflow commands for kodrdriv",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "guide"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grunnverk/commands-git.git"
  },
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build",
    "dev": "vite",
    "watch": "vite build --watch",
    "test": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "precommit": "npm run clean && npm run build && npm run lint && npm run test",
    "prepublishOnly": "npm run clean && npm run lint && npm run build && npm run test"
  },
  "keywords": [
    "kodrdriv",
    "git",
    "commands",
    "workflow",
    "automation"
  ],
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@grunnverk/ai-service": "^1.5.0",
    "@grunnverk/core": "^1.5.0",
    "@grunnverk/git-tools": "^1.5.0",
    "@grunnverk/github-tools": "^1.5.0",
    "@grunnverk/shared": "^1.5.2",
    "@google/generative-ai": "^0.24.1",
    "@riotprompt/riotprompt": "^0.0.21",
    "dotenv": "^16.4.7",
    "openai": "^6.16.0",
    "semver": "^7.7.2",
    "shell-escape": "^0.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@swc/core": "^1.13.3",
    "@types/node": "^25.0.3",
    "@types/shell-escape": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^4.0.13",
    "esbuild": "0.27.2",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "mockdate": "^3.0.5",
    "rollup": "^4.30.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^4.0.13"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.30.1",
    "@swc/core-linux-x64-gnu": "^1.13.3"
  }
}
